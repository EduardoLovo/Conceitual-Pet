generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  DEV
  ADMIN
  SELLER
  USER
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  phone     String   @unique
  password  String // Será criptografada
  role      Role     @default(USER) // Por padrão, quem se cadastra é cliente
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum BedModels {
  AMORA
  PUPS
}

enum Size {
  P
  M
  G
  GG
}

model ProductImage {
  id        Int     @id @default(autoincrement())
  url       String
  key       String? // ID do Cloudinary para deletar lá depois
  alt       String? // Texto para SEO (ex: "Cama montessoriana rosa")
  productId Int
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
}

model Product {
  id          Int            @id @default(autoincrement())
  model       BedModels
  description String
  price       Decimal        @db.Decimal(10, 2)
  color       String
  size        Size
  stock       Int
  mainImage   String?
  images      ProductImage[]
  isFeatured  Boolean        @default(false)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
}
